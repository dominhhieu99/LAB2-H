<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/poly" />

    <TextView
        style="@style/TextNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name" />

    <Button
        style="@style/TextNew"
        android:id="@+id/btn_bai1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_bai1" />

    <Button
        style="@style/TextNew"
        android:id="@+id/btn_bai2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_bai2" />

    <Button
        android:id="@+id/btn_bai3"
        style="@style/TextNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_bai3" />

    <Button
        android:id="@+id/btn_bai4"
        style="@style/TextNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_bai4" />
</LinearLayout>